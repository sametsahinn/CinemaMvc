@{
    ViewBag.Title = "Kayıt Ol";
}

<div class="panel panel-default">
    <div class="panel-heading">Giriş Yapın</div>
    <div class="panel-body">
        @if (Convert.ToBoolean(Session["useraddsuccess"]) == true)
        {
            Session["useraddsuccess"] = false;
            <div class="alert alert-info" role="alert">
                <span class="glyphicon glyphicon-remove"></span>
                <span class="sr-only">İnfo:</span>
                Kayıt Edildi.
            </div>
        }
        else { 
            Session["useraddsuccess"] = false;
            <div class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-remove"></span>
                <span class="sr-only">Error:</span>
                @*@ViewBag.addmessage*@
                Eksik veri girişi! Tüm Alanları Doldurunuz.
            </div>
        };
        <form enctype="multipart/form-data" class="form-horizontal" method="post" action="/Account/UserAdd">
            <div class="form-group">
                <label for="fulname" class="col-sm-4 control-label">Adınız :</label>
                <input class="form-control col-xs-12" name="txtFULNM" placeholder="Ad-Soyad" />
            </div>
            <div class="form-group">
                <label for="username" class="col-sm-4 control-label">Kullanıcı Adı :</label>
                <input class="form-control col-xs-12" name="txtUSRNM" placeholder="Kullanıcı adı" value="@Request.Form["username"]" />
            </div>
            <div class="form-group">
                <label for="EMAIL" class="col-sm-4 control-label">E-mail :</label>
                <input class="form-control col-xs-12" name="txtEMAIL" placeholder="E-mail" />
            </div>
            <div class="form-group">
                <label for="username" class="col-sm-4 control-label">Parola :</label>
                <input class="form-control" name="txtPWD" type="password" placeholder="Parola" />
            </div>
            <div class="form-group">
                <label for="username" class="col-sm-4 control-label">Profil :</label>
                <input type="file" id="file" name="file" />
            </div>
            <button class="btn btn-success col-sm-offset-4">Kayıt Ol</button>
        </form>

        @*@Html.Partial("Counter")*@
    </div>
</div>

