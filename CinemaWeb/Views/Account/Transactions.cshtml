                        <td style="text-align: center; line-height: 255px; ">@userTransactionsD.HALLNM</td>
                        <td style="text-align: center; line-height: 255px; ">@userTransactionsD.HALLTIME</td>
                        <td style="text-align: center; line-height: 255px; ">@userTransactionsD.SEATNM</td>
                        <td style="text-align: center; line-height: 255px; ">@userTransactionsD.DATETIME.ToString("dd.MM.yyyy")</td>
                        <td style="text-align: center; line-height: 50px; "><img src="@Url.Content(@userTransactionsD.AVATAR)" alt="avatar" /> <br /> @userTransactionsD.FULNM</td>
                        <td style="text-align: center; line-height: 50px; ">@userTransactionsD.STATUS <br /> <button class="btn btn-success col-sm-offset-4" id="@userTransactionsD.ID" name="@userTransactionsD.ID" value="@userTransactionsD.ID" style="margin: 0;"><i class="fa fa-credit-card"></i> Ödeme Yap </button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



