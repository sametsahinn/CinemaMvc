        <div class="form-group">
            <label for="STKDAY" class="col-sm-4 control-label">STK (Gün / Ay) :</label>
            <input class="form-control col-xs-12" name="txtSTKDAY" value="@user.STKDAY / @user.STKMONTH" readonly="readonly" placeholder="Gün / Ay" />
        </div>
        @*<div class="form-group">
