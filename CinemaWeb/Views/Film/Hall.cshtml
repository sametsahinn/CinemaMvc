@{
    ViewBag.Title = "Kategori Ekle";
}

<div class="panel panel-default">
    <div class="panel-heading">Salon Ekle</div>
    <div class="panel-body">
        @if (Convert.ToBoolean(Session["halladdsuccess"]) == true)
        {
            Session["halladdsuccess"] = false;
            <div class="alert alert-info" role="alert">
                <span class="glyphicon glyphicon-remove"></span>
                <span class="sr-only">İnfo:</span>
                Kayıt Edildi.
            </div>
        }
        else
        {
            Session["halladdsuccess"] = false;
            <div class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-remove"></span>
                <span class="sr-only">Error:</span>
                @*@ViewBag.addmessage*@
                Eksik veri girişi! Tüm Alanları Doldurunuz.
            </div>
        };
        <form enctype="multipart/form-data" class="form-horizontal" method="post" action="/Film/HallAdd">
            <div class="form-group">
                <label for="fulname" class="col-sm-4 control-label">Salon :</label>
                <input class="form-control col-xs-12" name="txtHALLNM" placeholder="Salon" />
            </div>
            <button class="btn btn-success col-sm-offset-4">Salon Ekle</button>
        </form>

        @*@Html.Partial("Counter")*@
    </div>
</div>
