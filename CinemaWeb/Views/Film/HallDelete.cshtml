
@{
    ViewBag.Title = "Salon Sil";
}

<h2>Salon Sil</h2>

@if (Convert.ToBoolean(Session["IS_SYSADM"]))
{
<div class="row">
    <table class="table table-bordered">
        <thead class="thead-inverse">
            <tr>
                <th>#</th>
                <th>Salon</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{int count = 0;}
            @foreach (var hall in ViewBag.HallList)
            {
                count++;
                <tr>
                    <form class="form-horizontal" method="post" action="/Film/HallDeleteAction">

                        <th style="text-align: center; line-height: 50px;" >@count</th>
                        <td style="text-align: center; line-height: 50px;">@hall.HALLNM</td>
                        <td style="text-align: center; line-height: 50px;"><button id="@hall.ID" class="btn btn-danger col-sm-offset-4" style="margin: 0;" name="btnHall" value="@hall.ID"><i class="fa fa-times" aria-hidden="true"></i> Sil</button></td>
                    </form>
                </tr>
            }
        </tbody>
    </table>
</div>
}
else {
<div class="alert alert-danger" role="alert">
    <span class="glyphicon glyphicon-remove"></span>
    <span class="sr-only">Error:</span>
    Yetkiniz Yok.
</div>
}